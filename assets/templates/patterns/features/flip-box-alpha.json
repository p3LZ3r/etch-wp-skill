    "ufny7fb": {
      "type": "class",
      "selector": ".flip-box-alpha",
      "collection": "default",
      "css": "perspective: 100vw;\n  position: relative;\n  background: transparent;\n  padding: 0;\n  color: inherit;\n  text-align: inherit;\n\n  [data-flip-box-side='front'],\n  [data-flip-box-side='back'] {\n    backface-visibility: hidden;\n    grid-area: 1 / 1;\n    display: flex;\n    flex-direction: column;\n    background: var(--box-background, white);\n    justify-content: center;\n    align-items: center;\n  }\n\n  &[aria-pressed='true'] &__inner {\n    transform: rotateY(180deg);\n    transition: transform var(--flip-speed, 0.5s);\n  }\n\n  &[data-flip-direction='block'][aria-pressed='true'] &__inner {\n    transform: rotateX(180deg);\n  }\n\n  @media (hover: hover) and (pointer: fine) {\n    &[data-flip-behavior*='hover']:hover &__inner {\n      transform: rotateY(180deg);\n      transition: transform var(--flip-speed, 0.5s);\n    }\n\n    &[data-flip-direction='block'][data-flip-behavior*='hover']:hover &__inner {\n      transform: rotateX(180deg);\n    }\n  }\n\n  &[data-flip-behavior*=\"click\"] {\n    cursor: pointer;\n  }",
      "readonly": false
    },
    "64tu9f4": {
      "type": "class",
      "selector": ".flip-box-alpha__inner",
      "collection": "default",
      "css": "transition: transform var(--flip-speed, 0.5s);\n  transform-style: preserve-3d;\n  display: grid;\n  inline-size: 100%;\n  block-size: 100%;\n  padding: 0;\n  background: transparent;\n  text-align: inherit;",
      "readonly": false
    },
