    "ypxrn1u": {
      "type": "class",
      "selector": ".scheme-switch-bravo",
      "collection": "default",
      "css": "--switch-size: 16%;\n  --icon-size: 10em;\n  --moon-color: #d9fbff;\n  --star-color: var(--moon-color);\n  --sun-color: #ffc233;\n  inline-size: 100%;\n  max-inline-size: max-content;\n  inline-size: 36px;\n  block-size: 36px;\n  aspect-ratio: 1;\n  min-inline-size: 0;\n  min-block-size: 0;\n  display: grid;\n  place-items: center;\n  padding: 0;\n  position: relative;\n  overflow: visible;",
      "readonly": false
    },
    "om5b9a7": {
      "type": "class",
      "selector": ".scheme-switch-bravo__icon",
      "collection": "default",
      "css": "font-size: var(--switch-size);\n  min-inline-size: 0;\n  min-block-size: 0;\n  display: flex;\n  inline-size: 100%;\n  block-size: 100%;\n  position: absolute;\n  inset-block-start: 50%;\n  inset-inline-start: 50%;\n  translate: -50% -50%;\n  border-radius: 50%;\n  transition:\n    rotate 400ms ease-in-out,\n    box-shadow 400ms ease-in-out,\n    background 400ms ease-in-out;\n\n  /* # Sun */\n  [data-current-scheme='sun' i] & {\n    font-size: calc(var(--switch-size) * 1.2);\n    background: var(--sun-color);\n    inline-size: calc(var(--icon-size) * 0.7);\n    block-size: calc(var(--icon-size) * 0.7);\n    rotate: 0deg;\n    box-shadow:\n      3em 3em 0 5em var(--sun-color) inset,\n      0 -5em 0 -2.7em var(--sun-color),\n      3.5em -3.5em 0 -3em var(--sun-color),\n      5em 0 0 -2.7em var(--sun-color),\n      3.5em 3.5em 0 -3em var(--sun-color),\n      0 5em 0 -2.7em var(--sun-color),\n      -3.5em 3.5em 0 -3em var(--sun-color),\n      -5em 0 0 -2.7em var(--sun-color),\n      -3.5em -3.5em 0 -3em var(--sun-color);\n  }\n\n  /* # Moon */\n  [data-current-scheme='moon' i] & {\n    font-size: calc(var(--switch-size) * 1);\n    inline-size: var(--icon-size);\n    block-size: var(--icon-size);\n    background: transparent;\n    rotate: -75deg;\n    box-shadow:\n      3em 2.5em 0 0em var(--moon-color) inset,\n      /* ## Stars */ color-mix(in hsl, var(--star-color, white) 70%, transparent) 0em -7em 0 -4.5em,\n      var(--star-color, white) 2em 6em 0 -4em,\n      var(--star-color, white) -4em -7em 0 -4.3em,\n      var(--star-color, white) 6em 2em 0 -4.2em,\n      color-mix(in hsl, var(--star-color, white) 70%, transparent) 4.5em 4em 0 -4.5em,\n      var(--star-color, white) -8em 0.5em 0 -4.4em,\n      color-mix(in hsl, var(--star-color, white) 70%, transparent) -6em -4em 0 -4.5em,\n      color-mix(in hsl, var(--star-color, white) 70%, transparent) -1em 7em 0 -4.5em;\n  }",
      "readonly": false
    }
